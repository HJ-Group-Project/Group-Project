<Window x:Class="BuzzfeedQuiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuzzfeedQuiz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox x:Name="quizGB" Header="Choose a quiz!" HorizontalAlignment="Left" Height="235" Margin="10,26,0,0" VerticalAlignment="Top" Width="760" FontSize="36">
            <StackPanel x:Name="quizstck" HorizontalAlignment="Left" Height="199" Margin="4,-7,-2,0" VerticalAlignment="Top" Width="746">
                <RadioButton x:Name="coffeeQuizRB" Content="What kind of coffee drink are you?"/>
                <RadioButton x:Name="animalQuizRB" Content="What kind of animal are you?"/>
                <RadioButton x:Name="spongebobQuizRB" Content="Which character from Spongebob are you?"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="chooseQuizbtn" Content="Take the Quiz" HorizontalAlignment="Left" Height="89" Margin="258,292,0,0" VerticalAlignment="Top" Width="266" FontSize="36" Click="ChooseQuizbtn_Click"/>

    </Grid>
</Window>
